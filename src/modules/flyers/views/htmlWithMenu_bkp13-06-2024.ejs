    <img src="<%= imageSrc %>" alt="Generated Image">

    <script src="https://cdn.jsdelivr.net/npm/@simonwep/pickr/dist/pickr.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sizePrice = document.getElementById('size_price');
            const initialPrice = sizePrice.value;

            sizePrice.addEventListener('change', function() {
                if (sizePrice.value !== initialPrice) {
                    updateProductPrice('size_price');
                }
            });

            // Inicializando os Pickr para cada color picker
            const productColorPicker = Pickr.create({
                el: '#productColorPicker',
                theme: 'classic', // 'classic', 'monolith', 'nano'
                default: '<%=flyersData.font_collor_product%>',
                components: {
                    preview: true,
                    opacity: true,
                    hue: true,
                    interaction: {
                        hex: true,
                        rgba: true,
                        input: true,
                        clear: true,
                        save: true
                    }
                }
            });

            const priceTagColorPicker = Pickr.create({
                el: '#priceTagColorPicker',
                theme: 'classic', // 'classic', 'monolith', 'nano'
                default: '<%=flyersData.collor_tag_price%>',
                components: {
                    preview: true,
                    opacity: true,
                    hue: true,
                    interaction: {
                        hex: true,
                        rgba: true,
                        input: true,
                        clear: true,
                        save: true
                    }
                }
            });


            const price_product_collor = Pickr.create({
                el: '#price_product_collor',
                theme: 'classic', // 'classic', 'monolith', 'nano'
                default: '<%=flyersData.price_product_collor%>',
                components: {
                    preview: true,
                    opacity: true,
                    hue: true,
                    interaction: {
                        hex: true,
                        rgba: true,
                        input: true,
                        clear: true,
                        save: true
                    }
                }
            });

            

            const backgroundCollorPost = Pickr.create({
                el: '#backgroundCollorPost',
                theme: 'classic', // 'classic', 'monolith', 'nano'
                default: '<%=flyersData.background_template_collor%>',
                components: {
                    preview: true,
                    opacity: true,
                    hue: true,
                    interaction: {
                        hex: true,
                        rgba: true,
                        input: true,
                        clear: true,
                        save: true
                    }
                }
            });
            
            const textCollors = Pickr.create({
                el: '#textCollors',
                theme: 'classic', // 'classic', 'monolith', 'nano'
                default: '<%=flyersData.font_color%>',
                components: {
                    preview: true,
                    opacity: true,
                    hue: true,
                    interaction: {
                        hex: true,
                        rgba: true,
                        input: true,
                        clear: true,
                        save: true
                    }
                }
            });

            // Função para enviar a cor atualizada para o servidor
            function sendRequest(valor, type) {
                console.log("chamou", valor, type);
                const idFlyer = '<%= idFlyer %>';
                const url = `/publish/flyer/updateTemplate/${idFlyer}/${encodeURIComponent(valor)}/${encodeURIComponent(type)}`;

                fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }) 
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Atualizado com sucesso!');
                    } else {
                        alert('Falha ao atualizar.');
                    }
                })
                .catch(error => {
                    console.error('Erro:', error);
                    alert('Ocorreu um erro ao atualizar.');
                });
            }

            

            price_product_collor.on('change', (color) => {
                const rgbaColor = color.toHEXA().toString();
                console.log('Cor Fonte Preço:', rgbaColor);
                sendRequest(rgbaColor, "price_product_collor");
            });

            productColorPicker.on('change', (color) => {
                const rgbaColor = color.toHEXA().toString();
                console.log('Cor Fonte Produto:', rgbaColor);
                sendRequest(rgbaColor, "font_collor_product");
            });

            priceTagColorPicker.on('change', (color) => {
                const rgbaColor = color.toHEXA().toString();
                console.log('Cor Tag Preço:', rgbaColor);
                sendRequest(rgbaColor, "collor_tag_price");
            });

            backgroundCollorPost.on('change', (color) => {
                const rgbaColor = color.toHEXA().toString();
                console.log('Cor Fundo:', rgbaColor);
                sendRequest(rgbaColor, "background_template_collor");
            });

            textCollors.on('change', (color) => {
                const rgbaColor = color.toHEXA().toString();
                console.log('Cor Fonte Textos:', rgbaColor);
                sendRequest(rgbaColor, "font_color");
            });

            // Fechar o picker após salvar

            price_product_collor.on('save', (color) => {
                const rgbaColor = color.toHEXA().toString();
                sendRequest(rgbaColor, "price_product_collor");
                price_product_collor.hide();
            });


            productColorPicker.on('save', (color) => {
                const rgbaColor = color.toHEXA().toString();
                sendRequest(rgbaColor, "font_collor_product");
                productColorPicker.hide();
            });

            priceTagColorPicker.on('save', (color) => {
                const rgbaColor = color.toHEXA().toString();
                sendRequest(rgbaColor, "collor_tag_price");
                priceTagColorPicker.hide();
            });

            backgroundCollorPost.on('save', (color) => {
                const rgbaColor = color.toHEXA().toString();
                sendRequest(rgbaColor, "background_template_collor");
                backgroundCollorPost.hide();
            });

            textCollors.on('save', (color) => {
                const rgbaColor = color.toHEXA().toString();
                sendRequest(rgbaColor, "font_color");
                textCollors.hide();
            });
        });

        function updateProductPrice(id) {
            console.log("######################### updatePrice");
            const value = document.getElementById(id).value;
            console.log("Value - " + value);
            console.log("ID - " + id);
            sendRequest(value, id);
        }

        function sendRequest(valor, type) {
            console.log("chamou", valor, type);
            const idFlyer = '<%= idFlyer %>';
            const url = `/publish/flyer/updateTemplate/${idFlyer}/${encodeURIComponent(valor)}/${encodeURIComponent(type)}`;

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            }) 
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Atualizado com sucesso!');
                } else {
                    alert('Falha ao atualizar.');
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Ocorreu um erro ao atualizar.');
            });
        }
    </script>
</body>
